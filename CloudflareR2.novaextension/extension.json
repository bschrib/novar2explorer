{
    "identifier": "com.trekbikes.cloudflarer2",
    "name": "Cloudflare R2",
    "organization": "Trek Bicycle",
    "description": "An extension that allows you to upload to a Cloudflare R2 Bucket",
    "version": "1.0",
    "categories": ["commands"],
    
    "main": "main.js",
    
    "activationEvents": ["onCommand:uploadToCloudflareR2"],
    
    "entitlements": {
        "filesystem": "readonly",
        "requests": true
    },
    
    "config": [
        {
            "title": "Cloudflare R2 Credentials",
            "type": "section",
            "children": [
                {
                    "key": "com.trekbikes.cloudflarer2.cloudflareR2AccessKey",
                    "title": "Cloudflare R2 Access Key",
                    "type": "string",
                    "default": "default",
                    "description": "Enter your Cloudflare R2 Access Key"
                },
                {
                    "key": "com.trekbikes.cloudflarer2.cloudflareR2SecretKey",
                    "title": "Cloudflare R2 Secret Key",
                    "type": "string",
                    "default": "default",
                    "description": "Enter your Cloudflare R2 Secret Key"
                },
                {
                    "key": "com.trekbikes.cloudflarer2.cloudflareR2AccountId",
                    "title": "Cloudflare R2 Account ID",
                    "type": "string",
                    "default": "default",
                    "description": "Enter your Cloudflare R2 Account ID"
                },
                {
                    "key": "com.trekbikes.cloudflarer2.cloudflareR2Buckets",
                    "title": "Cloudflare R2 Buckets",
                    "type": "string",
                    "default": "default,default",
                    "description": "Enter your Cloudflare R2 Bucket Names, separated by a comma"
                }
            ]
        }
    ],
    
    "actions": [
        {
            "identifier": "uploadToCloudflareR2",
            "title": "Upload to Cloudflare R2",
            "context": "workspaceItem"
        }
    ],
    
    "menus": {
      "workspaceItem": [
        {
          "title": "Upload to Cloudflare R2",
          "command": "uploadToCloudflareR2"
        }
      ]
    }
}